<form action='/movies/{{theMovie._id}}' method="POST">
   <p>
        <label>
            Title:
            <input type="text" name="title" value="{{theMovie.title}}">
        </label>
    </p>
     <p>
        <label>
            Genre:
            <input type="text" name="genre" value="{{theMovie.genre}}">
        </label>
    </p>
     <p>
        <label>
            Plot:
            <input type="text" name="plot" value="{{theMovie.plot}}">
        </label>
    </p>
     <p>
        <label>
            Cast:
            <select name="cast" multiple >
                {{#each theCast}}
                <option value="{{_id}}"{{#if selected}}selected="selected"{{/if}}>{{name}}</option>
                {{/each}}
            </select>
            
        </label>
    </p>
    <button>Edit this movie</button>
</form>